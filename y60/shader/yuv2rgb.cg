struct app2vert { 
    float4 Position : POSITION;
    float3 Normal   : NORMAL;
    float2 TexCoord : TEXCOORD0;
    float4 Color : COLOR;
};

struct vert2frag {
    float4 Vertex    : POSITION;
    float2 TexCoord0 : TEXCOORD0;
    float4 Color : COLOR;
};

vert2frag mainVertex(app2vert IN,    
                     uniform float4x4 GL_MODELVIEW_PROJECTION)
{
    vert2frag OUT;

    OUT.Vertex = mul(GL_MODELVIEW_PROJECTION, IN.Position);
    OUT.TexCoord0 =  float2(IN.TexCoord).xy;
    return OUT;
}

vert2frag mainVertexColor(app2vert IN,    
                     uniform float4x4 GL_MODELVIEW_PROJECTION)
{
    vert2frag OUT;

    OUT.Vertex = mul(GL_MODELVIEW_PROJECTION, IN.Position);
    OUT.TexCoord0 =  float2(IN.TexCoord).xy;
    OUT.Color = IN.Color;
    return OUT;
}

float4 mainFragment(vert2frag IN,
                    uniform sampler2D tex0,
                    uniform sampler2D tex1,
                    uniform sampler2D tex2): COLOR
{
    float3 myYUVColor;
    myYUVColor.x = tex2D(tex0, IN.TexCoord0)-0.0625;
    myYUVColor.y = tex2D(tex1, IN.TexCoord0)-0.5;
    myYUVColor.z = tex2D(tex2, IN.TexCoord0)-0.5;
    float3x3 myMatrix = float3x3(1.16,  0.0,   1.60, 1.16, -0.39, -0.81,1.16,  2.01,  0.0);
    float4 myRGBColor = float4(mul(myMatrix, myYUVColor), 1);
    return myRGBColor;
}

float4 mainFragmentRedKeying(vert2frag IN,
                    uniform sampler2D tex0,
                    uniform sampler2D tex1,
                    uniform sampler2D tex2): COLOR
{
    float3 myYUVColor;
    myYUVColor.x = tex2D(tex0, IN.TexCoord0)-0.0625;
    myYUVColor.y = tex2D(tex1, IN.TexCoord0)-0.5;
    myYUVColor.z = tex2D(tex2, IN.TexCoord0)-0.5;
    float3x3 myMatrix = float3x3(1.16,  0.0,   1.60, 1.16, -0.39, -0.81,1.16,  2.01,  0.0);
    float4 myRGBColor = float4(mul(myMatrix, myYUVColor), 1);
    myRGBColor.a = myRGBColor.r;
    return myRGBColor;
}

float4 mainFragmentYUVA(vert2frag IN,
                    uniform sampler2D tex0,
                    uniform sampler2D tex1,
                    uniform sampler2D tex2,
                    uniform sampler2D tex3): COLOR
{
    float3 myYUVColor;
    myYUVColor.x = tex2D(tex0, IN.TexCoord0)-0.0625;
    myYUVColor.y = tex2D(tex1, IN.TexCoord0)-0.5;
    myYUVColor.z = tex2D(tex2, IN.TexCoord0)-0.5;
    float3x3 myMatrix = float3x3(1.16,  0.0,   1.60, 1.16, -0.39, -0.81,1.16,  2.01,  0.0);
    float4 myRGBColor = float4(mul(myMatrix, myYUVColor), 1);
    myRGBColor.a = tex2D(tex3, IN.TexCoord0);
    return myRGBColor;
}

//////////////////////////////////////////////////////////
// This is a special shader for OttoBock:
//
// R = alpha
// G = unused
// B = Luminanz (Grauabstufungen)
/////////////////////////////////////////////////////////
float4 mainFragmentObKeying(vert2frag IN,
                    uniform sampler2D tex0,
                    uniform sampler2D tex1,
                    uniform sampler2D tex2,
                    uniform float4 surfacecolor): COLOR
{
    float3 myYUVColor;
    myYUVColor.x = tex2D(tex0, IN.TexCoord0)-0.0625;
    myYUVColor.y = tex2D(tex1, IN.TexCoord0)-0.5;
    myYUVColor.z = tex2D(tex2, IN.TexCoord0)-0.5;
    float3x3 myMatrix = float3x3(1.16,  0.0,   1.60, 1.16, -0.39, -0.81,1.16,  2.01,  0.0);
    float4 myRGBColor = float4(mul(myMatrix, myYUVColor), 1);

    
    float4 myRealRGBColor = float4(myRGBColor.b, myRGBColor.b,myRGBColor.b, myRGBColor.r);
    return myRealRGBColor*surfacecolor;

}
float4 mainFragmentObSimpleKeying(vert2frag IN,
                    uniform sampler2D tex0,
                    uniform float4 surfacecolor): COLOR
{
    float4 myRGBColor = tex2D(tex0, IN.TexCoord0);    
    float4 myRealRGBColor = float4(myRGBColor.b, myRGBColor.b,myRGBColor.b,myRGBColor.r);
    return myRealRGBColor*surfacecolor;

}
float4 mainFragmentRGBA(vert2frag IN,
                    uniform sampler2D tex0,
                    uniform sampler2D tex1,
                    uniform float4 surfacecolor): COLOR
{
    float4 myRGBColor = tex2D(tex0, IN.TexCoord0);    
    float myAlphaColor = tex2D(tex1, IN.TexCoord0);
    float4 myRealRGBColor = float4(myRGBColor.b, myRGBColor.b,myRGBColor.b,myAlphaColor);
    return myRealRGBColor*surfacecolor;
}
float4 mainFragmentRGBA_inverted(vert2frag IN,
                    uniform sampler2D tex0,
                    uniform sampler2D tex1,
                    uniform float4 surfacecolor): COLOR
{
    float4 myRGBColor = tex2D(tex0, IN.TexCoord0);    
    float myAlphaColor = tex2D(tex1, IN.TexCoord0);
    float4 myRealRGBColor = float4(1.0-myRGBColor.b, 1.0-myRGBColor.b,1.0-myRGBColor.b,1.0-myAlphaColor);
    return myRealRGBColor*surfacecolor;
}

