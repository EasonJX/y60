# subdirectory names
subdirs =

# Name of the library/application
project.name = GStreamerCapture
# only for libraries & xpcom components:
project.prefix = y60

# Project types are:
#   - application
#   - static-library
#   - shared-library
project.type = shared-library

# Comma separated list of
# extra defines
extra.defines =
extra.defines.linux =
extra.defines.windows =


# you don't wanna gstreamer be linked to every project, so:
platform.compiler.options.linux = -pthread -I/usr/include/gstreamer-0.10 -I/usr/include/glib-2.0 -I/usr/lib/glib-2.0/include -I/usr/include/libxml2

# SEMICOLON(!) separated list of
# extra include dirs
extra.include.dir =
extra.include.dir.linux = 
extra.include.dir.windows =

external.libraries =  
external.libraries.linux = pthread, gstreamer-0.10, gobject-2.0, gmodule-2.0, dl, gthread-2.0, rt, xml2, glib-2.0
variant.libraries = aslbase, aslzip, aslmath, asldom, aslxpath, y60base, y60jsbase, jsspidermonkey, y60scene, y60video, paintlib

# Comma separated list of Names/Patterns of
# all source files
source.files = **/*.cpp, **/*.c++
source.files.windows =
source.files.linux =
exclude.source.files = **/*.tst.cpp, **/*.tst.c++
exclude.source.files.windows =
exclude.source.files.linux =

# Comma separated list of Names/Patterns of
# header files to install
header.files = **/*.h
exclude.header.files =

# Comma separated list of Names/Patterns of
# all test sources
test.sources =
test.sources.windows =
test.sources.linux =
exclude.test.sources =
exclude.test.sources.windows =
exclude.test.sources.linux =

# Comma separated list of
# external libraries for tests
external.test.libraries = pthread
external.test.libraries.windows =
external.test.libraries.linux =

# Comma separated list of
# variant libraries for tests
variant.test.libraries = aslbase

