    template <class NATIVE_LIST>
    unsigned long JSNodeListBase<NATIVE_LIST>::length() const {
        return this->getNative().length();
    }

    template <class NATIVE_LIST>
    JSBool JSNodeListBase<NATIVE_LIST>::getPropertySwitch(unsigned long theID, JSContext *cx, JSObject *obj, jsval id, jsval *vp) {
        switch (theID) {
            case PROP_length:
                *vp = as_jsval(cx, this->getNative().length());
                return JS_TRUE;
            default:
                JS_ReportError(cx,"JSNodeListBase::getProperty: index %d out of range", theID);
                return JS_FALSE;
        }
    };
    template <class NATIVE_LIST>
    JSBool JSNodeListBase<NATIVE_LIST>::getPropertyIndex(unsigned long theIndex, JSContext *cx, JSObject *obj, jsval id, jsval *vp) {
        *vp = as_jsval(cx, this->getNative().item(theIndex));
        return JS_TRUE;
    };

    template <class NATIVE_LIST>
    JSBool JSNodeListBase<NATIVE_LIST>::setPropertySwitch(unsigned long theID, JSContext *cx, JSObject *obj, jsval id, jsval *vp) {
        JS_ReportError(cx,"JSNodeListBase::setPropertySwitch: index %d out of range", theID);
        return JS_FALSE;
    };

    template <class NATIVE_LIST>
    JSBool JSNodeListBase<NATIVE_LIST>::setPropertyIndex(unsigned long theIndex, JSContext *cx, JSObject *obj, jsval id, jsval *vp) {
        dom::NodePtr myArgNode1 = JSNode::getNodePtr(cx, *vp);
        this->openNative().item(theIndex) = myArgNode1;
        this->closeNative();
        return JS_TRUE;
    };

    template <class NATIVE_LIST>
    JSBool
    JSNodeListBase<NATIVE_LIST>::Constructor(JSContext *cx, JSObject *obj, uintN argc, 
            jsval *argv, jsval *rval) {
        DOC_BEGIN("Creates a new node list");
        DOC_END;

        if (JSA_GetClass(cx,obj) != Base::Class()) {
            JS_ReportError(cx,"Constructor for %s  bad object; did you forget a 'new'?",ClassName());
            return JS_FALSE;
        }
        JSNodeListBase * myNewObject = 0;
        dom::NodePtr myNewNode = dom::NodePtr(new dom::Node);
        if (argc == 0) {
            myNewObject=new JSNodeListBase(myNewNode, &(myNewNode->childNodes()));
        } else {
            JS_ReportError(cx,"Constructor for %s: superflous argument ignored",ClassName());
            myNewObject=new JSNodeListBase(myNewNode, &(myNewNode->childNodes()));
        }
        if (myNewObject) {
            JS_SetPrivate(cx,obj,myNewObject);
            return JS_TRUE;
        }
        JS_ReportError(cx,"JSVector::Constructor: bad parameters");
        return JS_FALSE;
    }

    template <class NATIVE_LIST>
    JSObject * JSNodeListBase<NATIVE_LIST>::Construct(JSContext *cx, dom::NodePtr theNode, 
            NATIVE_LIST * theList) {
        return Base::Construct(cx, theNode, theList);
    }

    template <class NATIVE_LIST>
    JSNodeListBase<NATIVE_LIST>::JSNodeListBase(dom::NodePtr theNode, 
            NATIVE_LIST * theNodeList)
        : Base(theNode, theNodeList)
    {}

    template <class NATIVE_LIST>
    JSObject * JSNodeListBase<NATIVE_LIST>::initClass(JSContext *cx, JSObject *theGlobalObject) {
        JSObject * myClass = Base::initClass(cx, theGlobalObject, ClassName(), Constructor, Properties(), Functions(), 0, 0, 0);
        DOC_CREATE(JSNodeListBase);
        return myClass;
    }

    template <>
    struct JSClassTraits<dom::NodeList>
        : public JSClassTraitsWrapper<dom::NodeList, JSNodeListBase<dom::NodeList> > {};


