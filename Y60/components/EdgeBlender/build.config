# Subdirectory names
subdirs =

# Name of the library/application
project.name = EdgeBlender
# only for libraries & xpcom components:
project.prefix = 

project.type = shared-library

frameworks.osx = OpenGL, Carbon, Cg 
extra.include.dir.osx = /usr/X11R6/include

platform.compiler.options.linux = ${pkg.pkg-config.cflags}
platform.linker.options.linux = ${pkg.pkg-config.libs}

# Comma separated list of Names of
# external libraries
external.libraries = avcodec, avformat
external.libraries.windows = opengl32, glu32, shell32, libcurl, \
                             advapi32, gdi32, user32, pthreadVC, winmm, \
                             dxguid, dsound, ws2_32, libpng, libtiff, \
							 libjpeg, libungif, Imath, Half, Cg, CgGL, glew32

#external.libraries.linux = pthread, curl, asound, freetype, SDL, png, tiff, jpeg, gif
external.libraries.linux = Cg, CgGL, GLEW
external.libraries.osx = GLEW

# Comma separated list of Names of
# variant libraries
variant.libraries = aslbase, aslmath, asldom, aslxpath, y60glrender, y60scene, y60base, \
                    y60inet, y60jsbase, y60jslib, y60glutil, \
                    y60gltext, aslnet, aslipc, \
                    jsspidermonkey, aslzip, aslserial, y60modelling, y60input, \
                    y60image, y60video, paintlib

# Comma separated list of Names/Patterns of
# all source files
source.files = **/*.cpp, **/*.c++
source.files.windows =
source.files.linux =
exclude.source.files = **/*.tst.cpp, **/*.tst.c++
exclude.source.files.windows =
exclude.source.files.linux =

# Comma separated list of Names/Patterns of
# header files to install
header.files =
exclude.header.files = **/*

# Comma separated list of Names/Patterns of
# all test sources
test.sources = **/*.tst.cpp, **/*.tst.c++
test.sources.windows =
test.sources.linux =
exclude.test.sources =
exclude.test.sources.windows =
exclude.test.sources.linux =

# Comma separated list of
# external libraries for tests
external.test.libraries =
external.test.libraries.windows = pthreadVC, user32, Shell32
external.test.libraries.linux = pthread

# Comma separated list of
# variant libraries for tests
variant.test.libraries = aslbase

