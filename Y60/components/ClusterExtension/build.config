# Subdirectory names
subdirs =

# Name of the library/application
project.name = Cluster
# only for libraries & xpcom components:
project.prefix = rendex

project.type = shared-library

# Comma separated list of Names of
# external libraries
external.libraries =  Cg, CgGL, avcodec, avformat
external.libraries.windows = opengl32, glu32, shell32, libcurl, advapi32, \
                             gdi32, user32, Netapi32, pthreadVC, winmm, \
                             zdll, libgcc, ws2_32, dxguid, dsound, psapi, libpng, libtiff, libjpeg, libungif

external.libraries.linux = pthread, curl, png, tiff, jpeg, ungif, asound, freetype, SDL

# Comma separated list of Names of
# variant libraries
variant.libraries = aslbase, aslmath, aslnet, aslipc, domxml, y60render, y60scene, y60base, \
                    y60inet, y60jslib, audiobase, audioapp, y60glutil, y60gltext, y60image,  \
                    y60video, jsspidermonkey, aslzip, y60modelling, y60input, \
                    aslserial, paintlib

# Comma separated list of Names/Patterns of
# all source files
source.files = **/*.cpp, **/*.c++
source.files.windows =
source.files.linux =
exclude.source.files = **/*.tst.cpp, **/*.tst.c++
exclude.source.files.windows =
exclude.source.files.linux =

# Comma separated list of Names/Patterns of
# header files to install
header.files =
exclude.header.files = **/*

# Comma separated list of Names/Patterns of
# all test sources
test.sources = **/*.tst.cpp, **/*.tst.c++
test.sources.windows =
test.sources.linux =
exclude.test.sources =
exclude.test.sources.windows =
exclude.test.sources.linux =

# Comma separated list of
# external libraries for tests
external.test.libraries =
external.test.libraries.windows = pthreadVC, user32, Shell32
external.test.libraries.linux = pthread

# Comma separated list of
# variant libraries for tests
variant.test.libraries = aslbase

