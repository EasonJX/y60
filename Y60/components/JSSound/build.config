# subdirectory names
subdirs =

# Name of the library/application
project.name = JSSound
# only for libraries & xpcom components:
project.prefix = y60

# Project types are:
#   - application
#   - static-library
#   - shared-library
project.type = shared-library

# Comma separated list of
# extra defines
extra.defines =
extra.defines.linux =
extra.defines.windows =
extra.defines.osx   = XP_UNIX

platform.compiler.options.linux = ${pkg.pkg-config.cflags}
#platform.linker.options.linux = ${pkg.pkg-config.libs} 

# SEMICOLON(!) separated list of
# extra include dirs
extra.include.dir =
extra.include.dir.linux =
extra.include.dir.windows =

external.libraries = avutil, avcodec, avformat
external.libraries.windows = pthreadvc, dsound, user32, dxguid, shell32, advapi32, psapi, Imath
# pthreadVC, wmvcore, user32, ole32, Shell32, Netapi32, gdi32, advapi32, libcurl, dsound, dxguid, wsock32, opengl32, glu32, Cg, CgGL
external.libraries.linux = 
# pthread, curl
variant.libraries = aslbase, aslmath, aslaudio, y60base, y60jsbase, jsspidermonkey, domxml, y60sound, paintlib

# Comma separated list of Names/Patterns of
# all source files
source.files = **/*.cpp
source.files.windows =
source.files.linux =
exclude.source.files = **/*.tst.cpp
exclude.source.files.windows =
exclude.source.files.linux =

# Comma separated list of Names/Patterns of
# header files to install
header.files = **/*.h
exclude.header.files =

# Comma separated list of Names/Patterns of
# all test sources
test.sources = **/*.tst.cpp
test.sources.windows =
test.sources.linux =
exclude.test.sources = testRealSound.tst.cpp
exclude.test.sources.windows =
exclude.test.sources.linux = 

# Comma separated list of
# external libraries for tests
external.test.libraries = avutil, avcodec, avformat, avutil, pthread, GL, GLU, Cg, CgGL, freetype, SDL
external.test.libraries.windows = pthreadvc, dsound, user32, dxguid, shell32, advapi32
external.test.libraries.linux =

# Comma separated list of
# variant libraries for tests
variant.test.libraries = aslbase, aslmath, aslserial, aslnet, domxml, \
                    y60inet, y60render, y60scene, y60glutil, y60base, \
                    y60gltext, y60jslib, sdlttf2, jsspidermonkey, \
                    y60modelling, y60input, y60sound,\
                    aslzip, y60image, y60video
