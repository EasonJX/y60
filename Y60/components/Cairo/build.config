# only for libraries & xpcom components:
subdirs =
project.name = Cairo

project.prefix =

project.type = shared-library

frameworks.osx = OpenGL, Carbon, Cg 
extra.include.dir.osx = /usr/X11R6/include
extra.include.dir.windows = ${env.PRO}/sysinclude/cairo

# Comma separated list of Names of
# external libraries
# external.libraries = Cg, CgGL, avcodec, avformat
external.libraries = cairo
external.libraries.windows = opengl32, glu32, shell32, libcurl, \
                             advapi32, gdi32, user32, pthreadVC, winmm, \
                             dxguid, dsound, psapi, ws2_32, libpng, libtiff, \
                             libjpeg, libungif, Imath, Iphlpapi, Cg, CgGL
# external.libraries.linux = cairo

platform.compiler.options.linux = ${pkg.pkg-config.cflags}
platform.compiler.options = ${pkg.pkg-config.cflags}
#platform.linker.options.linux = ${pkg.pkg-config.libs}

# Comma separated list of Names of
# variant libraries
# variant.libraries = aslbase, aslmath, aslnet, domxml, y60base, y60jsbase, jsspidermonkey, paintlib
variant.libraries = aslbase, aslmath, domxml, xpathxml, y60render, y60scene, y60base, y60jsbase, \
                    y60inet, y60jslib, y60glutil, \
                    y60gltext, aslipc, aslnet, \
                    jsspidermonkey, aslzip, aslserial, y60modelling, y60input, \
                    y60image, y60video, paintlib

# Comma separated list of Names/Patterns of
# all source files
source.files = **/*.cpp, **/*.c++
source.files.windows =
source.files.linux =
exclude.source.files = **/*.tst.cpp, **/*.tst.c++
exclude.source.files.windows =
exclude.source.files.linux =

# Comma separated list of Names/Patterns of
# header files to install
header.files = **/*.h
exclude.header.files =

# Comma separated list of Names/Patterns of
# all test sources
test.sources =
test.sources.windows =
test.sources.linux =
