s# Subdirectory names
subdirs =

# Name of the library/application
project.name = TaskManager

# only for libraries:
project.prefix =

# Project types are:
#   - application
#   - static-library
#   - shared-library
project.type = shared-library

platform.compiler.options.linux = ${pkg.pkg-config.cflags}
#platform.linker.options.linux = ${pkg.pkg-config.libs} 

# Comma separated list of Names of
# external libraries
external.libraries = Cg, CgGL, avcodec, avformat
external.libraries.windows = opengl32, glu32, shell32, libcurl, advapi32, gdi32, user32, pthreadVC, winmm, \
                             dxguid, dsound, libpng, libtiff, libjpeg, libungif, Imath, glib-2.0, glibmm

external.libraries.linux = pthread, curl, gif, asound, freetype, SDL, png, tiff, jpeg

# Comma separated list of Names of
# variant libraries
variant.libraries = aslbase, aslmath, domxml, y60render, y60scene, y60base, \
                    y60jslib, y60glutil, y60gltext, \
                    jsspidermonkey, aslzip, y60video, y60image, paintlib

# Comma separated list of Names/Patterns of
# all source files
source.files = **/*.cpp, **/*.c++
source.files.windows =
source.files.linux =
exclude.source.files = **/*.tst.cpp, **/*.tst.c++
exclude.source.files.windows =
exclude.source.files.linux =

# Comma separated list of Names/Patterns of
# header files to install
header.files =  **/*.h
exclude.header.files =

# Comma separated list of Names/Patterns of
# all test sources
test.sources = **/*.tst.cpp
test.sources.windows =
test.sources.linux =
exclude.test.sources =
exclude.test.sources.windows =
exclude.test.sources.linux =

# Comma separated list of
# external libraries for tests
external.test.libraries = pthread
external.test.libraries.windows =
external.test.libraries.linux =

# Comma separated list of
# variant libraries for tests
variant.test.libraries = aslbase

