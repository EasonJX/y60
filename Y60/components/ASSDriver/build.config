# Subdirectory names
subdirs = core

# Name of the library/application
project.name = ASSEventSource
# only for libraries & xpcom components:
project.prefix =

project.type = shared-library

extra.defines.osx   = XP_UNIX
frameworks.osx = OpenGL, Carbon, Cg 
extra.include.dir.osx = /usr/X11R6/include

platform.compiler.options.linux = ${pkg.pkg-config.cflags}
platform.linker.options.linux = ${pkg.pkg-config.libs}

# Comma separated list of Names of external libraries
external.libraries = avcodec, avformat
external.libraries.linux = Cg, CgGL, avcodec, avformat
external.libraries.windows = Cg, CgGL, opengl32, glu32, shell32, libcurl, \
                             advapi32, gdi32, user32, pthreadVC, winmm, \
                             dxguid, dsound, ws2_32, Imath, Iphlpapi, libpng, \
                             libtiff, libjpeg, libungif, Imath, Glib-2.0,\
                             glibmm, zdll
external.libraries.linux =

# Comma separated list of Names of variant libraries
variant.libraries = aslbase, aslmath, aslserial, aslnet, aslipc, domxml, \
                    y60base, y60scene, y60image, y60video, \
                    y60input, y60inet, y60render, y60glutil, y60jslib, \
                    y60gltext, y60jsbase,\
                    sdlttf2, jsspidermonkey, y60modelling, aslzip, paintlib

# Comma separated list of Names/Patterns of all source files
source.files = **/*.cpp, **/*.c++
source.files.windows =
source.files.linux =
exclude.source.files = **/*.tst.cpp, **/*.tst.c++
exclude.source.files.windows =
exclude.source.files.linux =

# Comma separated list of Names/Patterns of header files to install
header.files =
exclude.header.files = **/*

# Comma separated list of Names/Patterns of all test sources
test.sources = **/*.tst.cpp, **/*.tst.c++
test.sources.windows =
test.sources.linux =
exclude.test.sources =
exclude.test.sources.windows =
exclude.test.sources.linux =

# Comma separated list of external libraries for tests
external.test.libraries =
external.test.libraries.windows = pthreadVC, user32, Shell32
external.test.libraries.linux = pthread

# Comma separated list of variant libraries for tests
variant.test.libraries = aslbase

schema.files = event.xsd
