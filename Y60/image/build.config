project.type = library
project.prefix = y60
project.name = image

source.files = **/*.cpp
exclude.source.files = **/*.tst.cpp
header.files = **/*.h
test.sources = *.tst.cpp

variant.libraries          = aslbase, domxml, aslmath, paintlib, aslzip, y60base
# the osx linker needs these libraries to be listed here
external.libraries.osx = png, tiff, jpeg, curl, z, avformat, avcodec
external.libraries.linux = gif, png

frameworks.osx = Carbon

variant.test.libraries          = aslbase, domxml, aslmath, aslzip, y60base, paintlib
external.test.libraries.linux   = pthread, rt, curl, asound, png, tiff, z, jpeg, gif
external.test.libraries.windows = libpng, libtiff, libjpeg, libungif, zdll, pthreadVC, \
                                  libcurl, gdi32, user32, ole32, advapi32, shell32, \
                                  libgcc, dxguid, dsound, Imath, Glib-2.0
external.test.libraries         = avcodec, avformat

#debug.linker.options.osx = -read_only_relocs warning
#release.linker.options.osx = -read_only_relocs warning

exclude.source.files.windows =
